= render 'commons/login-image'
.container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'text'
    = link_to "Forgot your password?", new_password_path(resource_name), class: 'forgot'

    .actions
      = f.submit "LOGIN", class: 'btn-primary'
 